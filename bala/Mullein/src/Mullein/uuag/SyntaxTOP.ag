DATA Part
  | Part        phrases    : Phrases

DATA Phrase    
  | Phrase      body       : Motif
  | Repeated    body       : Motif
  | FSRepeat    body       : Motif
                fst_rep    : Motif
                snd_rep    : Motif 

DATA Motif
  | Motif       time_sig   : Meter
                bars       : Bars

DATA Bar
  | Bar         one        : Unison
  | Overlay     one        : Unison
                orest      : Unisons

DATA Unison
  | Unison      pulses     : Brackets
                tied       : {Bool}

-- bracket together beamed notes to make a pulsation
DATA Bracket
  | Singleton   elt        : Element
  | Bracket     elts       : Elements

TYPE Phrases      = [Phrase]
TYPE Bars         = [Bar]                
TYPE Unisons      = [Unison]
TYPE Brackets     = [Bracket]
TYPE Elements     = [Element]

