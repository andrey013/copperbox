DATA Motif
  | Motif       bars    : Bars

DATA Bar
  | Bar         one     : Unison
  | Overlay     one     : Unison
                orest   : Unisons

DATA Unison
  | Unison      pulses  : Brackets
                tied    : {Bool}

-- bracket together beamed notes to make a pulsation
DATA Bracket
  | Singleton   elt     : Element
  | Bracket     elts    : Elements


TYPE Bars         = [Bar]                
TYPE Unisons      = [Unison]
TYPE Brackets     = [Bracket]
TYPE Elements     = [Element]

