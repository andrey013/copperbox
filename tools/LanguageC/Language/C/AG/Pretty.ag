instance Pretty CTranslationUnit where
  pretty header = 
    let synthesized = wrap_CTranslationUnit (sem_CTranslationUnit header) inherited
        inherited   = Inh_CTranslationUnit
    in pp_Syn_CTranslationUnit synthesized

        
