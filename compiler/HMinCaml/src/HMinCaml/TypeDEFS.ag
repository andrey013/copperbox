
-- HMinCaml.TypeDEFS



DATA Type 
  | TUnit
  | TBool
  | TInt
  | TFloat
  | TFun        args      : Types  
                retTy     : Type
  | TTuple      tys       : Types
  | TArray      ty        : Type
  | TVar        var       : OptType
  

TYPE Types      = [Type]

TYPE TypeId     = (argId : {Id}, argType : Type)
TYPE TypeIds    = [TypeId]    
TYPE OptType    = MAYBE Type

ATTR TypeId TypeIds Type Types OptType [ | | copy : SELF ]

ATTR TypeIds       [ | | argId USE {:} {[]} : {[Id]} ]
ATTR TypeId        [ | | argId : {Id} ]

SEM TypeId
  | Tuple     lhs.argId   = @argId

ATTR TypeIds       [ | | argType USE {:} {[]} : {[Type]} ]
ATTR TypeId        [ | | argType : {Type} ]

SEM TypeId
  | Tuple     lhs.argType = @argType.copy
  

TYPE LabeledType = (argId : {Label}, argType : Type) 
  